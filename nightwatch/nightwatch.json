{
	"src_folders": ["tests"],
	"output_folder": "reports",
	"custom_commands_path": "./tools/commands",
	"custom_assertions_path": ["./tools/assertions/"],
	"UNUSED_custom_commands_path": "./node_modules/nightwatch-xhr/lib", 
	"page_objects_path": "",
	"globals_path": "./globals.js",

	"selenium": {
		"start_process": false
	},

	"test_settings": {
		"default": {
			"selenium_port": 9515,
			"selenium_host": "localhost",
			"default_path_prefix": "",
			"globals": {
				"waitForConditionTimeout": 30000  
			},
			"desiredCapabilities": {
				"browserName": "chrome",
				"chromeOptions": {
					"args": ["--no-sandbox"]
				},
				"acceptSslCerts": true
			}
		}
	}
}
